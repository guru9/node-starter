{
    "env": {
      "browser": true,
      "commonjs": true,
      "node": true,
      "es6": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      },
      "ecmaVersion": 2018
    },
    "rules": {
      "indent": ["error", "tab"],
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "no-console": ["warn", { "allow": ["warn"] }],
      "no-mixed-spaces-and-tabs": ["error", "smart-tabs"]
    }
  }
  